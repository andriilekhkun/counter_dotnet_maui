<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Counter_Lekhkun_Andrii.Controls"
             x:Class="Counter_Lekhkun_Andrii.MainPage">
    <ContentPage.BindingContext>
        <controls:CounterView/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Spacing="30"
                         Padding="30"
                         VerticalOptions="Center"
                         WidthRequest="400">
        <controls:CounterView x:Name="myCounter"
                              CounterName="Counter"
                              CounterCount="0"
                              IncreaseCommand="{Binding IncreaseCommand}"
                              DecreaseCommand="{Binding DecreaseCommand}"/>
    </VerticalStackLayout>
</ContentPage>
