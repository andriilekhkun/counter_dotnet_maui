<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Counter_Lekhkun_Andrii.Controls"
             x:Name="this"
             x:Class="Counter_Lekhkun_Andrii.Controls.CounterView">
    <Border BindingContext="{x:Reference this}"
            StrokeThickness="3"
            Stroke="White"
            HeightRequest="410"
            WidthRequest="310">
        <Grid RowDefinitions="2*,3*,2*"
              RowSpacing="30"
              ColumnDefinitions="*,*"
              ColumnSpacing="40"
              HeightRequest="400"
              WidthRequest="300"
              BackgroundColor="Black">
            <Label Text="{Binding CounterName}"
                   TextColor="White"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"
                   HorizontalTextAlignment="Center"
                   FontSize="45"
                   FontAttributes="Bold"
                   Margin="0,20,0,0"/>
            <Label Text="{Binding CounterCount}"
                   TextColor="White"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   HorizontalTextAlignment="Center"
                   FontSize="75"/>
            <Button Text="+"
                    Grid.Column="0"
                    Grid.Row="2"
                    WidthRequest="20"
                    HeightRequest="20"
                    Margin="0,0,0,20"
                    Command="{Binding IncreaseCommand}"/>
            <Button Text="-"
                    Grid.Column="1"
                    Grid.Row="2"
                    WidthRequest="20"
                    HeightRequest="20"
                    Margin="0,0,0,20"
                    Command="{Binding DecreaseCommand}"/>
        </Grid>
    </Border>
</ContentView>
